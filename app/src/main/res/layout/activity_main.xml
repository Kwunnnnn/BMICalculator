<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.asama.bmicalculator.MainActivity"
    android:orientation="vertical"
    android:background="@android:color/background_dark"
    android:weightSum="1"
    android:gravity="center_vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:srcCompat="@drawable/bmi"
        android:id="@+id/imageView" />

    <TextView
        android:text="@string/type_height_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="?android:attr/colorPressedHighlight"
        android:id="@+id/textHeight" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/fillHeight"
        android:background="@android:color/background_light"
        android:layout_weight="0.09"
        android:layout_marginTop="10dp" />

    <TextView
        android:text="@string/type_weight_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="?android:attr/colorPressedHighlight"
        android:layout_marginTop="10dp"
        android:id="@+id/filWeight" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/fillWeight"
        android:layout_marginTop="10dp"
        android:layout_weight="0.09"
        android:background="@android:color/background_light" />

    <Button
        android:text="@string/bottom_cal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_marginTop="20dp"
        android:id="@+id/button_calculate" />

</LinearLayout>
